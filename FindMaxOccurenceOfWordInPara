
import java.util.ArrayList;
import java.util.List;
import java.util.Arrays;
import java.util.HashMap; 
import java.util.Map; 
import java.util.Map.Entry; 
import java.util.*; 



public class HelloWorld{

     public static void main(String []args){
         
		//INITIAIZE
        String para = "Bob ball, hit on the ball hit again hit.";
        List<String> al = new ArrayList<String>();

        //CREATE A IGNORE LIST
        List<String> ignoreList = new ArrayList<String>();
        ignoreList.add(",");
        ignoreList.add(".");
        ignoreList.add("!");
        ignoreList.add("?");


        // STORE STRING IN ARRAYLIST
        String str[] = para.split(" ");
        al = Arrays.asList(str);
        /*
        for(String s: al){
            System.out.println(s);
        }
        */


        //ITERATE LIST AND STORE INTO MAP
        Map<String, Integer> hm = new HashMap<String, Integer>(); 
        for (String i : al) { 
          // IGNORE STRING IF ITS IN THE IGNORE LIST
          if (ignoreList.contains(i))
              continue;

          // CONVERT TO LOWER CASE
          i = i.toLowerCase();

          // INSERT THE HASH MAP
          Integer j = hm.get(i);
          hm.put(i, (j == null) ? 1 : j + 1); 
        } 


        //PRINT THE MAP -- NOT NECESSARY
        /*
        for (Map.Entry<String, Integer> val : hm.entrySet()) { 
            System.out.println("Element " + val.getKey() + " "
                               + "occurs"
                               + ": " + val.getValue() + " times"); 
        } 
        */

        //FIND THE MOST FREQUENT WORD
        String maxKey = new String();
        int maxVal = 0;

        for (Map.Entry<String, Integer> val : hm.entrySet()) { 

            String currKey = val.getKey();
            int currVal = val.getValue();
          
						//COMPARE WITH THE MAX SO FAR
            if (currVal >= maxVal)
            {
                maxKey = currKey;
                maxVal = currVal;
            }

        } 
       
        System.out.println("Most frequently occuring word = " + maxKey);

      }
}
